{
  "name": "wikipedia-analytics-client",
  "type": "module",
  "private": true,
  "main": "./dist/index.html",
  "scripts": {
    "prebuild": "mkdir -p ./dist/js ./dist/styles",
    "build:tailwind": "npx @tailwindcss/cli -i ./styles/input.css -o ./dist/styles/bundle.css ",
    "build:tailwind:dev": "npx @tailwindcss/cli -i ./styles/input.css -o ./dist/styles/bundle.css --watch",
    "build:js": "tsup",
    "build:js:dev": "tsup --watch",
    "copy:static": "cp index.html ./dist/index.html && cp -r ./assets ./dist/assets",
    "build": "npm run prebuild && npm run copy:static && npm run build:tailwind && npm run build:js",
    "typecheck": "tsc"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "chart.js": "^4.4.9"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.4",
    "@types/bun": "latest",
    "autoprefixer": "^10.4.21",
    "dotenv": "^16.5.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.4",
    "tsup": "^8.4.0"
  }
}